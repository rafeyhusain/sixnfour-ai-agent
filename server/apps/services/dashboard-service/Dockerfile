# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build dashboard-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 5001:5001 -t dashboard-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=5001

WORKDIR /app

RUN addgroup --system dashboard-service && \
          adduser --system -G dashboard-service dashboard-service

# Copy the entire dist/apps/services/dashboard-service directory
COPY dist/apps/services/dashboard-service/ dashboard-service/
RUN chown -R dashboard-service:dashboard-service .

# Create data and uploads directories with proper permissions
RUN mkdir -p /app/data/uploads && \
    chown -R dashboard-service:dashboard-service /app/data && \
    chmod -R 755 /app/data/uploads

# Install dependencies using the generated package.json
RUN npm --prefix dashboard-service --omit=dev -f install

USER dashboard-service

CMD [ "node", "dashboard-service/main.js" ]
