FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=5002

WORKDIR /app

RUN addgroup --system auth-service && \
          adduser --system -G auth-service auth-service

# Copy the entire dist/apps/services/auth-service directory
COPY dist/apps/services/auth-service/ auth-service/
