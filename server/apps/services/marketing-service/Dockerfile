FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=5003

WORKDIR /app

RUN addgroup --system marketing-service && \
          adduser --system -G marketing-service marketing-service

# Copy the entire dist/apps/services/marketing-service directory
COPY dist/apps/services/marketing-service/ marketing-service/
RUN chown -R marketing-service:marketing-service .

# Create data directory
RUN mkdir -p /app/data && chown -R marketing-service:marketing-service /app/data

# Install dependencies using the generated package.json
RUN npm --prefix marketing-service --omit=dev -f install

USER marketing-service

CMD [ "node", "marketing-service/main.js" ]
